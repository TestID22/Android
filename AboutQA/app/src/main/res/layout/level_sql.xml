<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"><![CDATA[

    />

    ]]>

    <ImageView
        android:id="@+id/level_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/background_level_test_documentation"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_back_from_level_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/btn_stroke_press_border_blue"
                android:fontFamily="@font/swfont"
                android:paddingBottom="10px"
                android:text="back"
                android:textColor="@color/yellow"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_btn_stroke_yellow"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/qa_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfont"
                    android:text="SqL - зык структурированных запросов"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/qa_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SQL"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/SQL"
                    android:textAlignment="center"
                    android:textColor="@color/yellow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/style_btn_stroke_yellow"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/qc_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfontcirylic"
                    android:text="База Данных(Data Base)"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/qc_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/DataBase"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_btn_stroke_yellow"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/st_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfontcirylic"
                    android:text="Создание Базы Данных"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/st_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/CreateDataBase"
                    android:textAlignment="center"
                    android:textColor="@color/lightbluemenu"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_btn_stroke_yellow"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/sq_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfont"
                    android:text="Изменения Столбцов БАЗЫ ДАННЫЙх"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/sq_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/SQL"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:textSize="14dp" />
            </LinearLayout>




        </LinearLayout>
    </ScrollView>


</RelativeLayout>


