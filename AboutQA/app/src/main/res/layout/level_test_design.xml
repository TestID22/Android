<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"><![CDATA[

    />

    ]]>

    <ImageView
        android:id="@+id/level_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/backgrount_for_test_level"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_back_from_level_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/btn_back"
                android:fontFamily="@font/swfont"
                android:paddingBottom="10px"
                android:text="Назад"
                android:textColor="@color/lightbluemenu"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_btn_blue_levels"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/qa_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfontcirylic"
                    android:text="Тест Дизайн"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/qa_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_design"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:typeface="sans" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/style_level_borders"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/design_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfontcirylic"
                    android:text="	Эквивалентное Разделение (Equivalence Partitioning — EP)."
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/qc_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ep"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_level_borders"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/st_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfontcirylic"
                    android:text="Анализ Граничных Значений (Boundary Value Analysis — BVA)"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/st_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/BVA"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_level_borders"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/sq_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfontcirylic"
                    android:text="Причина / Следствие (Cause/Effect — CE)."
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/sq_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ce"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_level_borders"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/test_design_eg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfont"
                    android:text="Предугадывание ошибки (Error Guessing — EG)."
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/test_design_eg_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/eg"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/style_level_borders"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/test_design_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfontcirylic"
                    android:text="Предугадывание ошибки (Error Guessing — EG)."
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/test_design_et_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/et"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />
            </LinearLayout>




        </LinearLayout>
    </ScrollView>


</RelativeLayout>


