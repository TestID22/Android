<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/level_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/backgrount_for_test_level"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_back_from_level_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/btn_back"
                android:fontFamily="@font/swfont"
                android:paddingBottom="10px"
                android:text="Назад"
                android:textColor="@color/lightbluemenu"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_btn_blue_levels"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/qa_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfontcirylic"
                    android:text="Верификация и валидация"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/qa_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verification_vs_validation"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:typeface="sans" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/style_level_borders"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/design_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfontcirylic"
                    android:text="Верификация (Verification)"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/qc_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="— это статическая практика проверки документов, дизайна, архитектуры, кода, т.д."
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_level_borders"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/st_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfontcirylic"
                    android:text="Верификация"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/st_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ver_table"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_level_borders"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/sq_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfontcirylic"
                    android:text="Валидация (validation)"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/sq_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="– это процесс оценки конечного продукта, необходимо проверить, соответствует ли программное обеспечение ожиданиям и требованиям клиента. Это динамический механизм проверки и тестирования фактического продукта."
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_level_borders"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/test_design_eg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swfont"
                    android:text="Валидация"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/test_design_eg_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/validation_table"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_levels_borders"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>


